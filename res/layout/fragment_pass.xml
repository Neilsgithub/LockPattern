<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lockpattern.app.PasswordFragment"
     >
    
    <LinearLayout
    	android:layout_width="match_parent"
   		android:layout_height="match_parent"
    	android:orientation="vertical" 
    	android:background="#FF6600"
    	tools:context="com.lockpattern.app.MainActivity"
    	>
    
    	<TextView 
        	android:id="@+id/fragment_pass_lock_hint"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.1"
        	android:textSize="20sp"
        	android:textColor="#00b285"
        	android:text="请绘制图案"
        	android:gravity="center"
        	/>
    
    	<com.lockpattern.app.LockPatternView 
        	android:id="@+id/fragment_pass_lock"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="1"
        	/>
    
    	<LinearLayout 
        	android:id="@+id/fragment_pass_btn_layout"
        	android:layout_width="match_parent"
        	android:layout_height="0dp"
        	android:layout_weight="0.1"
        	android:orientation="horizontal"
        	android:visibility="gone"
        	>
        
        	<VideoView 
            	android:layout_width="0dp"
            	android:layout_weight="1"
            	android:visibility="invisible"
            	android:layout_height="match_parent"
            	/>
        
        	<Button 
            	android:id="@+id/fragment_pass_commit"
            	android:layout_width="0dp"
            	android:layout_weight="1"
            	android:layout_height="match_parent"
            	android:text="设置完毕"
            	android:gravity="center"
            	/>
        
    	</LinearLayout>

	</LinearLayout>

</FrameLayout>
